	- link.icon16x16 = `${baseDir}favicon/favicon-16x16.png`
	- link.icon32x32 = `${baseDir}favicon/favicon-32x32.png`
	- link.icon96x96 = `${baseDir}favicon/favicon-96x96.png`
	- linkCssAttrs = [`${baseDir}css/social-nav.css`, `${baseDir}css/forms.css`, `${baseDir}css/main-nav.css`, `${baseDir}css/promo.css`, `${baseDir}css/catalog.css`, `${baseDir}css/advantages.css`, `${baseDir}css/hits.css`, `${baseDir}css/contacts.css`]
		- linkJsAttrs = ['//api-maps.yandex.ru/2.1/?lang=ru_RU']
	-
		var navContent = {'items':[
		{
		'textLink': 'О НАС',
		'dropdownClass': 'js-nav-dropdown-link active',
		'dropdown': [
		{
		'textLinkDropdown': 'О компании',
		},
		{
		'textLinkDropdown': 'Новости',
		},
		{
		'textLinkDropdown': 'Статьи',
		},
		{
		'textLinkDropdown': 'Вакансии',
		},
		{
		'textLinkDropdown': 'Фотогалерея',
		}
		]
		},
		{
		'textLink': 'КАТАЛОГ'
		},
		{
		'textLink': 'РАСПРОДАЖА'
		},
		{
		'textLink': 'КОЛЛЕКТИВАМ'
		},
		{
		'textLink': 'АКЦИИ'
		},
		{
		'textLink': 'КОНТАКТЫ'
		}
		]}
	-
		var breadcrumbsContent = {'items':[
		{
			'text': 'Главная'
		},
		{
			'text': 'Каталог'
		},
		{
			'text': 'Одежда для бальных танцев',
			'last': true
		}
		]}
block content
	include pug/parts/main-header
	+breadcrumbs(breadcrumbsContent)
	section.catalog
		.container
			h2.inner-page-title
				span Одежда для бальных танцев
			form.catalog__inner(action="/")
				include pug/components/catalog-sidebar
				include pug/components/catalog-grid
	include pug/parts/main-footer
