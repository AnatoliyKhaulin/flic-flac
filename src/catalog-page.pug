prepend vars
	- title = 'Каталог - Флик Фляк'

append vars
	- link.appleTouchIcon = `${baseDir}favicon/apple-icon.png`
	- link.appleTouchIcon57x57 = `${baseDir}favicon/apple-icon-57x57.png`
	- link.appleTouchIcon60x60 = `${baseDir}favicon/apple-icon-60x60.png`
	- link.appleTouchIcon72x72 = `${baseDir}favicon/apple-icon-72x72.png`
	- link.appleTouchIcon76x76 = `${baseDir}favicon/apple-icon-76x76.png`
	- link.appleTouchIcon114x114 = `${baseDir}favicon/apple-icon-114x114.png`
	- link.appleTouchIcon120x120 = `${baseDir}favicon/apple-icon-120x120.png`
	- link.appleTouchIcon144x144 = `${baseDir}favicon/apple-icon-144x144.png`
	- link.appleTouchIcon152x152 = `${baseDir}favicon/apple-icon-152x152.png`
